# encoding: UTF-8

source 'https://rubygems.org'
ruby '2.1.0', engine: 'rbx', engine_version: '2.1.1'

# core
gem 'sinatra', '1.4.3'
gem 'puma'
gem 'rake'
gem 'mongoid'
gem 'foreman'
gem 'therubyracer'
gem 'rubysl'

# assets
gem 'sinatra-assetpack'
gem 'compass'
gem 'sinatra-support', require: 'sinatra/support'

# templating
gem 'haml'
gem 'markdown'
gem 'sass'
gem 'yajl-ruby'

# monitoring
gem 'newrelic_rpm'

# apis
gem 'tumblr_client'

group :development, :test do
  gem 'pre-commit'
  gem 'rspec' # unit testing

  # linting
  gem 'rubocop'
  gem 'pelusa'
end
