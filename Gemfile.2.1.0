# encoding: UTF-8

source 'https://rubygems.org'
ruby '2.1.0', engine: 'rbx', engine_version: '2.1.1'

# core
gem 'sinatra', '1.4.3'
gem 'puma'
gem 'rake'
gem 'mongoid'
gem 'foreman'
gem 'therubyracer'
gem 'rubysl'

# heroku
gem 'newrelic_rpm'

# templating
gem 'haml'
gem 'markdown'
gem 'sass'
gem 'compass'
gem 'yajl-ruby'
gem 'padrino-helpers', '>=0.11.4'
gem 'jammit-sinatra'

# parsing
gem 'libxml-ruby'

# apis
gem 'tumblr_client'

group :development, :test do
  gem 'pre-commit'
  gem 'rspec' # unit testing

  # linting
  gem 'rubocop'
  gem 'pelusa'
end
